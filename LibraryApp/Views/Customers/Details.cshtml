@model Library.Services.ViewModels.Customers.CustomerViewModel
@{
    Layout = "_Layout";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <h1>Detalles del Usuario</h1>
    <br />
    <br />
    <br />
    <div class="recuadroUsuarioDetalle">
        <table id="detallesUsuario">
            <thead>
                <tr>
                    <th style="padding:0 75px 0 15px;">
                        Nombre
                    </th>
                    <th style="padding:0 75px 0 15px;">
                        Direccion
                    </th>

                    <th style="padding:0 55px 0 15px;">
                        Telefono
                    </th>

                    <th style="padding:0 15px 0 15px;">
                        DNI
                    </th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="padding:0 15px 0 15px;">@Model.Name  </td>
                    <td style="padding:0 15px 0 15px;">@Model.Address</td>
                    <td style="padding:0 15px 0 15px;">@Model.PhoneNumber</td>
                    <td style="padding:0 15px 0 15px;">@Model.Id </td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <br />
    <a type="button" id="botonEdicionUsuario" class="btn btn-primary" asp-area="" asp-controller="Customers" asp-action="Update" asp-route-id=@Model.Id>Editar datos</a>
    <br />
    <br />
    <br />
    <div>

        <h4 id="historialRes">Historial de reservas</h4>
        <table>
            <li></li>
        </table>
    </div>

    <br />
    <br />
    <br />
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Withdrawals" asp-action="Create" asp-route-id=@Model.Id >Crear Reserva</a>
    <a type="button" class="btn btn-primary abajoizq" asp-area="" asp-controller="Customers" asp-action="List">Volver</a>
</body>
</html>