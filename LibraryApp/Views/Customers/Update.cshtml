@model Library.Services.ViewModels.Customers.CustomerViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css">
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>

    <div class="myform fondo">
        <br />
        <h2>Editar Usuario: @Model.Id</h2>
        <br />
        <form asp-action="UpdateData" method="post" asp-route-id="@Model.Id">
            <div class="myforma">
                <label style="width:66px;" asp-for="Address">Direccion:</label>
                <input style="margin-left:18px" asp-for="Address" required maxlength="50" />
            </div>

            <div class="myforma">
                <label style="width:83px;" asp-for="Name" class="">Nombre:</label>
                <input asp-for="Name" required maxlength="50" />

            </div>
            <div class="myforma">
                <label style="width:83px;" asp-for="PhoneNumber" class="">Telefono:</label>
                <input asp-for="PhoneNumber" required maxlength="15" />
            </div>
            <div class="myforma">
                <label style="width:84px;" asp-for="Id" class="">DNI:</label>
                <input asp-for="Id" value="@Model.Id" disabled />
            </div>
            <div>
                <p></p>
                <a ><button style="width: 135px;margin-left: 77px;" type="submit">Guardar cambios</button></a>
                <p></p>
            </div>

        </form>
    </div>

    <div class="book">
        <div class="Title">
            <p></p>
        </div>
    </div>

    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Customers" asp-action="Details" asp-route-id=@Model.Id >Cancelar</a>

</body>
</html>
