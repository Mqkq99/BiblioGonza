@model Library.Services.ViewModels.Customers.CustomerViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <link rel ="stylesheet" href="~/css/site.css">
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>
    
    <div class="myform fondo" >
        <br />
            <h2 >Create Customer</h2>
            <br />
        <form asp-action="Create" method="post">
            <div class="myforma">
                <label asp-for="Address">Direccion:</label>
                <input style="margin-left:18px" asp-for="Address" required maxlength="60" />
            </div>
           
            <div  class="myforma">
                <label asp-for="Name" class="" >Nombre:</label>
                <input asp-for="Name" required maxlength="50" required maxlenght="50"/>
                
            </div>            
             <div  class="myforma">
                <label asp-for="PhoneNumber" class="" >Telefono:</label>
                <input asp-for="PhoneNumber" required maxlength="15" type="number" min="0"/>
            </div>        
              <div  class="myforma">
                <label asp-for="Id" class="" >DNI:</label>
                <input asp-for="Id" required maxlength="9" type="number" />
            </div>        
            <div>
               <p></p>
            <button type="submit">Crear customer</button>
             <p></p>
        </div>

        </form>
    </div>
    
     <div class="book">
         <div class="Title" >
           <p></p>
         </div>
              </div>

     <a type="button" class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index" >Volver</a>
</body>
</html>
