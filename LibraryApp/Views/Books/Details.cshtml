@model Library.Services.ViewModels.Books.BookViewModel
@{
    Layout = "_Layout";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <div class="container">
        <p>Nombre: @Model.Author</p>
        <p>Direccion: @Model.Title</p>
        <button class="btn-danger ">crear reserva </button>
        <button> <a class="btn-dark" asp-controller="BookCopies" asp-action="Create" asp-route-bookid=@Model.Id>Agregar Copias</a></button>
    </div>
    <div>
        @if (@Model.BookCopies != null)
        {
            <h4>Listado de copias</h4>
            //Que sea una tabla como las otras 
            @foreach (var item in @Model.BookCopies)
            {
                <ol>

                    <li>@item.Edition @item.TotalQuantity</li>
                 
                </ol>
            }
        }
    </div>
</body>
</html>