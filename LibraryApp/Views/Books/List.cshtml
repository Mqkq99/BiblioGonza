@model List<Library.Services.ViewModels.Books.BookViewModel>
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/3dd63c27aa.js" crossorigin="anonymous"></script>
</head>
<body>
    <br />
    <br />
    <h1>Lista de Libros</h1>
    @if (Model.Any())
    {
 

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Libro <i class="fa-regular fa-square-plus"></i> </a>
</p>
<hr>
<table class="table tablaCentradaLibros">
    <thead>
        <tr>
            <th>
                Título
                
            </th>
            <th>
                Autor
            </th>
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         
            <td>
                @Html.DisplayFor(modelItem => item.Title)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td style="width:320px;"> 
                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Update" asp-route-id=@item.Id >Editar <span> <i class="fa-solid fa-pen-to-square"></i></span></a>
                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id=@item.Id >Detalles <i class="fa-solid fa-circle-info"></i></a>
                <a  type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Delete" asp-route-id=@item.Id  >Eliminar <span> <i class="fa-solid fa-trash-can"></i></span> </a>
            </td>
        </tr>
}
    </tbody>
</table>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No users created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a user
                </h5>
                <a asp-action="Create" asp-controller="Books"
               class="btn btn-primary mb-3" style="width:auto">
                   Agregar Libro
                </a>
            </div>
        </div>
    }
    <a type="button" class="btn btn-primary abajoizq" asp-area="" asp-controller="Home" asp-action="Index">Volver</a>
</body>
</html>