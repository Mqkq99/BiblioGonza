@model List<Library.Services.ViewModels.Books.BookViewModel>
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Lista de libros</h1>
    @if (Model.Any())
    {
 <h1>Index</h1>

<p>
    <a asp-page="/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DNI
            </th>
            <th>
                Nombre
            </th>
            <th>
                Direccion
            </th>
            <th>
                Telefono
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Update" asp-route-id=@item.Id >Editar</a>
                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id=@item.Id >Detalles</a>
                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Delete" asp-route-id=@item.Id >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No users created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a user
                </h5>
                <a asp-action="Create" asp-controller="Book"
               class="btn btn-primary mb-3" style="width:auto">
                   Agregar Libro
                </a>
            </div>
        </div>
    }

</body>
</html>