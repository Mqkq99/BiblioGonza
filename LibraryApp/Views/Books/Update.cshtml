            <div>
               <p></p>
            <button type="submit">Guardar cambios</button>
             <p></p>
        </div>

        </form>
    </div>
    
     <div class="book">
         <div class="Title" >
           <p></p>
         </div>
              </div>

     <a type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id=@Model.Id >Cancelar</a>

</body>
</html>

