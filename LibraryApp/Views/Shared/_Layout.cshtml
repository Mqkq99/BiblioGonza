<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
</head>
<body>
     <script src="~/js/site.js"></script>
    <div class="wrapper">
          <div class="section">
            <div class="top_navbar">
                <div class="value">
                    <a href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
            </div>

        </div>
        <div class="sidebar">
            <div class="profile">
                <h3> <img id="iconoIzquierdo" src="~/Images/libro.png" /> Menú</h3>
            </div>
            <ul>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="icon"><i class="fa-solid fa-house"></i></span>
                        <span class="item">Inicio</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Create">
                      <span class="icon"><i class="fa-solid fa-book"></i></span>
                        <span class="item">Crear Libro</span>
                        </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Create">
                      <span class="icon"><i class="fa-solid fa-address-card"></i></span>
                        <span class="item">Crear Cliente</span>
                        </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="List">
                      <span class="icon"><i class="fa-solid fa-list"></i></span>
                        <span class="item">Lista de Libros</span>
                        </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="List">
                            <span class="icon"><i class="fa-solid fa-address-book"></i></span>
                        <span class="item">Lista de Usuarios</span>
                        </a>
                </li>

            </ul>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LibraryApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
