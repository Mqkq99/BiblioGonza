@model Library.Services.ViewModels.BookCopies.BookCopyCreateViewModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css">
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>

    <div class="myform fondo">
        <br />
        <h2>Crear copias del libro @Model.Book.Title </h2>
        <h5> @Model.Book.Author </h5>

        <br />
        <form asp-action="Create" asp-controller="BookCopies" asp method="post" asp-route-bookId="@Model.Book.Id" onsubmit="return validateBookCopy()">
            <div class="myforma">
                <label asp-for="Edition">Edicion:</label>
                <input style="margin-left:18px" asp-for="Edition" required />
            </div>

            <div class="myforma">
                <label style="width: 89px; margin-left:-8px;" asp-for="TotalQuantity">Cantidad:</label>
                <input asp-for="TotalQuantity" type="number" id="quantity" required />

            </div>
            <div>
                <p></p>
                <button type="submit">Aceptar</button>
                <p></p>
            </div>

        </form>
    </div>

    <div class="book">
        <div class="Title">
            <p></p>
        </div>



    </div>

    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id=@Model.Book.Id>Cancelar</a>

</body>
    <script>
        function validateQuantity() {
            var copy = document.getElementById("quantity").value
            if (copy > 0) {
                return true
            }
            else {
                alert("La cantidad debe ser mayor a 0");
                return false
            }
        }
        function validateBookCopy() {
            if (validateQuantity()) {
                return true
            } else {
                return false
            }
        }
    </script>
</html>

